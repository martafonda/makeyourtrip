<section class="container">
  <h2 class="text-center">Sign up in MakeYourTrip</h2>
  <article class="col-md-offset-4 col-md-5">
    <form class="input-group">
      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <%= f.input :name, :required => true %>
        <%= f.input :email, :required => true, :autofocus => true %>
        <%= f.input :password, :required => true %>
        <%= f.input :password_confirmation, :required => true %>
        <div class="form-actions pull-right margin-top">
          <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>
    </form>
  </article>
  <hr>
  <nav class="col-md-offset-4 text-center col-md-4">
    <h4>Already have an account??</h4>
    <%= render partial: 'login_links' %>
  </nav>
</section>